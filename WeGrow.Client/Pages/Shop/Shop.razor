@using WeGrow.Models.Shop

@page "/shop/modules"
@{
    if(CurrentPage < 1)
    {
        CurrentPage = 1;
    }
}
<MudTextField  @bind-Value="Search" Label="Search" Variant="Variant.Outlined" Adornment="Adornment.End" OnAdornmentClick="OnSearch" AdornmentIcon="@Icons.Filled.Search" AdornmentColor="Color.Secondary" />
<ShopFilter FilterModel="FilterModel" OnFilterApplied="OnFilterApplied" />
<ShopModules ShopItems="ItemsList" />
<MudPagination Color="Color.Primary" Count="@PagesCount" SelectedChanged="OnPageChange"/>