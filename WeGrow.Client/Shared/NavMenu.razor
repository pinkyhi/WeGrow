@using WeGrow.Core.Resources
<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
    <MudNavLink Href="/shop/modules"  Match="NavLinkMatch.Prefix">Shop</MudNavLink>
    <AuthorizeView Roles="admin">
        <Authorized>
            <MudNavLink Href="/orders"  Match="NavLinkMatch.Prefix">Orders</MudNavLink>
            <MudNavGroup Title="Admin" Expanded="true">
                <MudNavLink Href="@ApiRoutes.AdminModules"  Match="NavLinkMatch.Prefix">Modules</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminReceipts"  Match="NavLinkMatch.Prefix">Receipts</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminOrders"  Match="NavLinkMatch.Prefix">Orders</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminModuleInstances"  Match="NavLinkMatch.Prefix">Module instances</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminSystemInstances"  Match="NavLinkMatch.Prefix">System instances</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminGrows"  Match="NavLinkMatch.Prefix">Grows</MudNavLink>
                <MudNavLink Href="@ApiRoutes.AdminSchedules"  Match="NavLinkMatch.Prefix">Schedules</MudNavLink>
            </MudNavGroup>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView>
        <Authorized>
            <MudNavGroup Title="Account" Expanded="true">
                <MudNavLink Href="@ApiRoutes.AccountSystems" Match="NavLinkMatch.Prefix">Systems</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/logout"  Match="NavLinkMatch.Prefix">Logout</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/login"  Match="NavLinkMatch.Prefix">Login</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
    <MudNavLink Href="/about"  Match="NavLinkMatch.Prefix">About</MudNavLink>
</MudNavMenu>
